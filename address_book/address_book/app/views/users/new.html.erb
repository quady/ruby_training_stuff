<h1>New User</h1>

<%= form_for @user do |f| %>
    <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= @user.errors[:first_name] %>
    </p>

    <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= @user.errors[:first_name] %>
    </p>

    <%= f.submit %>
<% end %>